{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@view-launcher/*": ["packages/*/src"]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "packages/*/src",
  ],
  "exclude": [
    "node_modules"
  ]
}
